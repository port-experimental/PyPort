{
  "project": {
    "root": ".",
    "src_folder": "src",
    "tests_folder": "tests",
    "min_doc_coverage": 80.0
  },
  "tools": {
    "coverage": {
      "config_file": "utilz/local_cicd/cfg/.coveragerc",
      "data_file": ".coverage",
      "badge_pattern": "!\\[Coverage\\]\\(.*\\)"
    },
    "maintainability": {
      "badge_pattern": "!\\[Maintainability\\]\\(.*\\)"
    },
    "security": {
      "badge_pattern": "!\\[Security\\]\\(.*\\)"
    },
    "dependencies": {
      "badge_pattern": "!\\[Dependencies\\]\\(.*\\)"
    },
    "doc_coverage": {
      "badge_pattern": "!\\[Doc Coverage\\]\\(.*\\)"
    }
  },
  "build": {
    "pypi_config": "utilz/local_cicd/cfg/.pypirc"
  }
}
